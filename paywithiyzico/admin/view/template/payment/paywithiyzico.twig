{{ header }}{{ column_left }}
<div id="content">
    <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
    </ul>
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" style="float:right;" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" style="float:right;" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1><i class="fa fa-credit-card"></i> {{ heading_title }}</h1>
        </div>
    </div>
    <div class="container-fluid">
    <div class="card">
  <div class="card-header"><i class="fa-solid fa-pencil"></i>   <span>Pay with iyzico<strong> V:</strong>{{ version }}</div>
  <div class="card-body">
    <div class="panel-body">

                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" onsubmit="return getApiValid()" class="form-horizontal">
                    <div class="form-group">
                    <div class="row mb-3">
                    <label for="input-status" class="col-sm-2 col-form-label">{{ extension_status }}</label>
                    <div class="col-sm-10">
                      <div class="form-check form-switch form-switch-lg">
                        <input type="hidden" name="payment_paywithiyzico_status" value="0"/>
                        <input type="checkbox" name="payment_paywithiyzico_status" value="1" id="input-status" class="form-check-input"{% if payment_paywithiyzico_status %} checked{% endif %}/>
                      </div>
                    </div>
                  </div>

                    <div class="row mb-3">
              <label for="input-approved-status" class="col-sm-2 col-form-label" for="test">{{ order_status }}</label>
              <div class="col-sm-10">
              <select class="form-control" name="payment_paywithiyzico_order_status">
                  {% for order_status in order_statuses %}
                      {% if order_status.order_status_id == payment_paywithiyzico_order_status %}
                          <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                      {% else %}
                          {% if payment_paywithiyzico_order_status == false and order_status.order_status_id == 5  %}
                              <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                          {% endif %}
                          <option value="{{ order_status.order_status_id }}" >{{ order_status.name }}</option>
                      {% endif %}
                  {% endfor %}
              </select>
              {% if error_order_status %}
                  <div class="text-danger">{{ error_order_status }}</div>
              {% endif %}
              </div>
            </div>

            <div class="row mb-3">
                      <label for="input-approved-status" class="col-sm-2 col-form-label" for="test">{{ cancel_order_status }}</label>
                      <div class="col-sm-10">
                      <select class="form-control" name="payment_paywithiyzico_order_cancel_status">
                          {% for order_status in order_statuses %}
                              {% if order_status.order_status_id == payment_paywithiyzico_order_cancel_status %}
                                  <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                              {% else %}
                                  {% if payment_paywithiyzico_order_cancel_status == false and order_status.order_status_id == 7  %}
                                      <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                                  {% endif %}
                                  <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                              {% endif %}
                          {% endfor %}
                      </select>
                      {% if error_cancel_order_status %}
                          <div class="text-danger">{{ error_cancel_order_status }}</div>
                      {% endif %}
                      </div>
                    </div>
</div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>

{{ footer }}
